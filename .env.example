# Application
APP_NAME=FlareCloud
APP_ENV=development
DEBUG=True
SECRET_KEY=change-me-in-production-very-long-random-string

# Server
HOST=0.0.0.0
PORT=8000
PUBLIC_URL=https://flarecloud.ru

# Database
DATABASE_URL=postgresql+asyncpg://cdn_user:cdn_password@localhost:5432/cdn_waf
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_DB=1

# Celery
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# JWT
JWT_SECRET_KEY=change-me-in-production-another-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ACME/Let's Encrypt
ACME_EMAIL=admin@yourdomain.com
ACME_DIRECTORY_URL=https://acme-v02.api.letsencrypt.org/directory
# For testing: https://acme-staging-v02.api.letsencrypt.org/directory

# Edge Nodes
EDGE_CONFIG_UPDATE_INTERVAL=30

# Logging
LOG_LEVEL=INFO


